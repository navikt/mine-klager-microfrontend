{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "allowJs": false,

    /* Bundler mode */
    "noUncheckedIndexedAccess": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  }
}
